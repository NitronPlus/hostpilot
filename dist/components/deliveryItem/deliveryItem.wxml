<block>
    <view class="index" bindtap="detailItem" data-e-tap-so="this">
        <view class="index-box"><text class="index-box-name">{{storeName}}</text>
            <view class="index-box-close" hidden="{{closeHidden}}" catchtap="deleteItem" data-e-tap-so="this">
                <image class="index-box-close-image" src="{{closeImage}}"></image>
            </view>
        </view>
        <view class="index-box">
            <view class="index-box-items"><text class="index-box-items-item">货品数:{{number}}</text><text class="index-box-items-item">商品总重:{{weight}}</text><text class="index-box-items-item">联系号码:{{phone}}</text><text class="index-box-items-item">地址:{{address}}</text>
                <view class="index-box-items-bottom"><text class="index-box-items-bottom-invoice items-container-tag" hidden="{{invoice_count < 1}}">今日有发票</text><text class="index-box-items-bottom-confirm items-container-tag" hidden="{{!isConfirm}}">货品已确认</text>
                </view>
            </view>
            <view class="index-box-arrow">
                <image class="index-box-arrow-image" src="{{arrowImage}}"></image>
            </view>
        </view>
    </view>
</block>