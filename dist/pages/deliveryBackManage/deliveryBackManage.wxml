<block>
    <view class="page-container">
        <view class="picker-container"><text class="link-text" bindtap="onLinkTextClicked">查看今日回物</text>
            <view class="picker-view-container">
                <picker class="picker" range="{{storeNames}}" bindchange="onStorePicked" value="{{selectedStoreIndex}}">
                    <view class="picker-text">{{anonymousState__temp}}</view>
                    <image src="{{anonymousState__temp2}}" class="caret-down"></image>
                </picker>
            </view>
        </view>
        <view class="title-container"><text class="title-container-item">名称</text><text class="title-container-item">单位</text><text class="title-container-item">回收数量</text><text class="title-container-item"></text>
        </view>
        <view style="margin-bottom:120rpx">
            <view class="item-container" wx:key="$original.id" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="index"><text class="normal-text">{{item.$original.product_name}}</text><text class="normal-text">{{item.$original.uom_name}}</text>
                <view class="delivery-back-input">
                    <block>
                        <block wx:if="{{item.$original.uom_name === 'KG'}}">
                            <input value="{{item.$original.product_number}}" type="digit" bindinput="anonymousFunc0" bindfocus="onFocus" bindblur="onBlur" data-e-input-so="this" data-e-input-a-a="{{index}}" data-e-focus-so="this" data-e-focus-a-a="{{index}}" data-e-blur-so="this" data-e-blur-a-a="{{index}}" />
                        </block>
                        <block wx:else>
                            <input value="{{item.$original.product_number}}" type="number" bindinput="anonymousFunc1" bindfocus="onFocus" bindblur="onBlur" data-e-input-so="this" data-e-input-a-a="{{index}}" data-e-focus-so="this" data-e-focus-a-a="{{index}}" data-e-blur-so="this" data-e-blur-a-a="{{index}}" />
                        </block>
                    </block>
                </view>
                <view class="img-container" bindtap="onDeleteClick" data-e-tap-so="this" data-e-tap-a-a="{{item.$original}}">
                    <image src="{{item.$loopState__temp4}}" class="img-delete-item"></image>
                </view>
            </view>
            <image src="{{anonymousState__temp5}}" class="img-add-item" bindtap="onAddProductClick"></image>
        </view>
        <view class="bottom-container" bindtap="onSubmitBtnClicked" data-e-tap-so="this">确认提交</view>
    </view>
</block>