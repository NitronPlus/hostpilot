<block>
    <view class="index">
        <view class="index-top">
            <view class="index-top-container">
                <info-input index="phone" __triggerObserer="{{ _triggerObserer }}" myStyle="{{anonymousState__temp}}" name="联系号码:" placeholder="新的手机号码" bindoninputchange="inputChange" __fn_onInputChange="{{true}}" data-e-oninputchange-so="this"></info-input>
                <info-input index="code" __triggerObserer="{{ _triggerObserer }}" myStyle="{{anonymousState__temp2}}" name="验证码:" placeholder="短信验证码" bindoninputchange="inputChange" __fn_onInputChange="{{true}}" data-e-oninputchange-so="this"></info-input>
            </view>
            <view class="index-top-send-container">
                <view class="index-top-send-container-send"><text class="index-top-send-container-send-bottom" bindtap="modifyPhoneNumber" data-e-tap-so="this">{{codeStatus}}</text>
                </view>
            </view>
        </view>
        <view class="index-bottom" bindtap="submit" data-e-tap-so="this">确认修改</view>
    </view>
</block>