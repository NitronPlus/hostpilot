<block>
    <view class="index"><text class="title">请填写以下信息,谢谢</text>
        <info-input index="carName" __triggerObserer="{{ _triggerObserer }}" name="配送人员:" placeholder="请输入您的姓名" bindoninputchange="inputChange" __fn_onInputChange="{{true}}" data-e-oninputchange-so="this"></info-input>
        <view class="item"><text class="edit-item-name">配送公司:</text>
            <view class="edit-spinner">{{anonymousState__temp}}
                <input class="edit-input" placeholder="请输入配送公司名称" value="{{carCompany}}" bindinput="anonymousFunc0" />
                <block wx:if="{{isSelCompany}}">
                    <view class="edit-spinner-list"><text class="edit-spinner-item" wx:key="$original" bindtap="anonymousFunc1" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="__index1" data-e-tap-so="this" data-e-tap-a-a="{{__index1}}">{{item.$original}}\n</text>
                    </view>
                </block>
            </view>
        </view>
        <view class="item phone"><text class="item_name item_name_left">联系号码:</text><text class="item_right">{{phone}}</text>
            <view class="modify"><text class="modify_bottom" bindtap="modifyPhoneNumber" data-e-tap-so="this">修改</text>
            </view>
        </view>
        <view class="item"><text class="item_name item_name_left">配送车型:</text>
            <view class="pick-parent">
                <picker class="pick" mode="selector" range="{{carType}}" index="{{seletedIndex}}" bindchange="onChange"><text>{{anonymousState__temp2}}</text><text class="modify-bottom-pick">{{carCompany ? '修改' : '请先填写配送公司信息'}}</text>
                </picker>
            </view>
        </view>
        <bottom-button name="确认提交" __triggerObserer="{{ _triggerObserer }}" bindonviewclick="submit" __fn_onViewClick="{{true}}" data-e-onviewclick-so="this"></bottom-button>
    </view>
</block>